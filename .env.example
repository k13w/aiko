# Configurações do PostgreSQL
POSTGRES_USER=seu_usuario
POSTGRES_PASSWORD=sua_senha
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=reconciliation_db
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Configurações da IUGU
IUGU_API_KEY=sua_chave_api_iugu
IUGU_API_URL=https://api.iugu.com/v1

# Configurações da Aplicação
APP_NAME=reconciliation-service
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000

# Configurações de Reconciliação
RECONCILIATION_INTERVAL=3600  # Intervalo em segundos (1 hora)
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=300  # Delay entre tentativas em segundos (5 minutos)

# Configurações de IA e Machine Learning
AI_TRAINING_INTERVAL_HOURS=24  # Intervalo para retreinamento automático (24 horas)
MIN_NEW_RECONCILIATIONS=10  # Mínimo de novas reconciliações para retreinar
AI_MODEL_PATH=models/  # Diretório para salvar modelos treinados
AI_CONFIDENCE_THRESHOLD=0.8  # Threshold de confiança para ajustes automáticos

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FORMAT=json